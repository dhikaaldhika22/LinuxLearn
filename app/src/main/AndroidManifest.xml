        android:supportsRtl="true"
        android:theme="@style/Theme.LinuxLearn">
        <activity
            android:name=".ui.FullScreenVideoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.DragAndDropDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MultiChoiceDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ExerciseTypesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.QuizResultActivity"
