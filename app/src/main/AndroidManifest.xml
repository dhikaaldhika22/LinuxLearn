        <activity
            android:name=".ui.MultipleChoiceDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailSubjectMatterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SeeAllExercisesActivity"
            android:exported="false" />
